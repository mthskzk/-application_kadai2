<% book.post_comments.each do |post_comment| %>
  <%= image_tag post_comment.user.get_profile_image, size:"100x100" %>
  <%= post_comment.comment %>
  <% if post_comment.user == current_user %>
    <%= link_to "Destroy", book_post_comment_path(post_comment.book, post_comment), method: :delete, class: "btn btn-sm btn-danger", remote: true %>
  <% end %><br>
  <%= link_to(post_comment.user) do%>
    <%= post_comment.user.name %>
  <% end %><br>
<% end %>